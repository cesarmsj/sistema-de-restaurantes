extends /layouts/main

block content

    style(type='text/css').
        fieldset.scheduler-border {
        border: 1px groove #ddd !important;
        padding: 0 1.4em 1.4em 1.4em !important;
        margin: 0 0 1.9em 0 !important;
        -webkit-box-shadow:  0px 0px 0px 0px #000;
                box-shadow:  0px 0px 0px 0px #000;
        }
        legend.scheduler-border {
            font-size: 1.2em !important;
            font-weight: bold !important;
            text-align: left !important;
            width: auto; // fixes the problem 1
            border-bottom: none; // fixes the problem 2
        }
    
    .container-fluid
        h1(style="font-size:22px; margin-top: 2%") Restaurantes
    .container-fluid
        fieldset(class="scheduler-border" style="height:200px; width:600px; border:2px #cccccc solid; border-radius: 10px;")
            legend(class="scheduler-border" style="font-size:14px;") Filtros
            form(method='get' action='/search')
                div.form-group
                    label(for='name') Nome:
                    input#name.form-control(type='text', placeholder='nome do restaurante' name='name')
                button.btn.btn-primary(type='submit') Pesquisar
                a(href="/restaurantes/create", class="btn btn-primary btn-lg" style='margin-left: 10px;') Cadastrar novo restaurante
                //- a(class='button' href='google.com' style='margin-left: 10px;') Cadastrar novo restaurante
        
    .container-fluid
        table#list
            tr
                th 
                th
                th Restaurantes
            tr
            each restaurante in restaurantes
                tr  
                    td 
                        img(src="images/del.png", alt="", width="20px", height="20px")
                    td  
                        img(src="images/edit.png", alt="", width="20px", height="20px")
                    td #{restaurante.nome}
               
